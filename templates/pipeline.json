{
        "AWSTemplateFormatVersion" : "2010-09-09",
        "Description" : "Template for creation of AWS CodePipeline pipeline",
        "Parameters": {
          "PipelineName": {
            "Type" : "String",
            "Default": "SimplePipeline",
            "Description": "Name of the pipeline to be shown in AWS CodePipeline"
          },
          "ApplicationRepositoryName": {
            "Type": "String",
            "Description": "Name of the Github repository to use as application source, inside a Github user account"
          },
          "ApplicationRepositoryOwner": {
            "Type": "String",
            "Description": "The Github user account that the repository belongs to"
          },
          "ApplicationRepositoryOAuthToken": {
            "Type": "String",
            "Description": "The Github OAuthToken that will allow CodePipeline to use the repository"
          }
        },
        "Resources" : {
                "ArtifactStoreS3Bucket": {
                        "Type" : "AWS::S3::Bucket",
                        "Properties" : {
                                "BucketName" : {
                                        "Fn::Join": [
                                                "-",
                                                [
                                                        {
                                                                "Ref": "PipelineName"
                                                        },
                                                        {
                                                                "Ref": "AWS::Region"
                                                        },
                                                        {
                                                                "Ref": "AWS::AccountId"
                                                        }
                                                ]
                                        ]
                                },
                                "VersioningConfiguration": {
                                        "Status" : "Enabled"
                                }
                        }
                },

                "PipelineRole" : {
                        "Type": "AWS::IAM::Role",
                        "Properties": {
                                "AssumeRolePolicyDocument": {
                                        "Version" : "2012-10-17",
                                        "Statement": [ {
                                                "Effect": "Allow",
                                                "Principal": {
                                                        "Service": [ "codepipeline.amazonaws.com" ]
                                                },
                                                "Action": [ "sts:AssumeRole" ]
                                        } ]
                                }
                        }

                },

                "PipelineRolePolicy": {
                        "Type": "AWS::IAM::Policy",
                        "Properties": {
                                "PolicyName" : "PipelinePolicy",
                                "Roles" : [
                                        {
                                                "Ref" : "PipelineRole"
                                        }
                                ],
                                "PolicyDocument" : {
                                        "Statement": [
                                                {
                                                        "Action": [
                                                                "s3:GetObject",
                                                                "s3:GetObjectVersion",
                                                                "s3:GetBucketVersioning"
                                                        ],
                                                        "Resource": "*",
                                                        "Effect": "Allow"
                                                },
                                                {
                                                        "Action": [
                                                                "s3:PutObject"
                                                        ],
                                                        "Resource": [
                                                                {
                                                                  "Fn::Join": [
                                                                        "",
                                                                        [
                                                                            "arn:aws:s3:::",
                                                                            {
                                                                              "Fn::Join": [
                                                                                      "-",
                                                                                      [
                                                                                              {
                                                                                                      "Ref": "PipelineName"
                                                                                              },
                                                                                              {
                                                                                                      "Ref": "AWS::Region"
                                                                                              },
                                                                                              "*/*"
                                                                                      ]
                                                                              ]
                                                                            }
                                                                        ]
                                                                  ]
                                                                },
                                                                "arn:aws:s3:::elasticbeanstalk*"
                                                        ],
                                                        "Effect": "Allow"
                                                },
                                                {
                                                        "Action": [
                                                                "codecommit:CancelUploadArchive",
                                                                "codecommit:GetBranch",
                                                                "codecommit:GetCommit",
                                                                "codecommit:GetUploadArchiveStatus",
                                                                "codecommit:UploadArchive"
                                                        ],
                                                        "Resource": "*",
                                                        "Effect": "Allow"
                                                },
                                                {
                                                        "Action": [
                                                                "codedeploy:CreateDeployment",
                                                                "codedeploy:GetApplicationRevision",
                                                                "codedeploy:GetDeployment",
                                                                "codedeploy:GetDeploymentConfig",
                                                                "codedeploy:RegisterApplicationRevision"
                                                        ],
                                                        "Resource": "*",
                                                        "Effect": "Allow"
                                                },
                                                {
                                                        "Action": [
                                                                "elasticbeanstalk:*",
                                                                "ec2:*",
                                                                "elasticloadbalancing:*",
                                                                "autoscaling:*",
                                                                "cloudwatch:*",
                                                                "s3:*",
                                                                "sns:*",
                                                                "cloudformation:*",
                                                                "rds:*",
                                                                "sqs:*",
                                                                "ecs:*",
                                                                "iam:PassRole"
                                                        ],
                                                        "Resource": "*",
                                                        "Effect": "Allow"
                                                },
                                                {
                                                        "Action": [
                                                                "lambda:InvokeFunction",
                                                                "lambda:ListFunctions"
                                                        ],
                                                        "Resource": "*",
                                                        "Effect": "Allow"
                                                },
                                                {
                                                        "Action": [
                                                                "opsworks:CreateDeployment",
                                                                "opsworks:DescribeApps",
                                                                "opsworks:DescribeCommands",
                                                                "opsworks:DescribeDeployments",
                                                                "opsworks:DescribeInstances",
                                                                "opsworks:DescribeStacks",
                                                                "opsworks:UpdateApp",
                                                                "opsworks:UpdateStack"
                                                        ],
                                                        "Resource": "*",
                                                        "Effect": "Allow"
                                                },
                                                {
                                                        "Action": [
                                                                "cloudformation:CreateStack",
                                                                "cloudformation:DeleteStack",
                                                                "cloudformation:DescribeStacks",
                                                                "cloudformation:UpdateStack",
                                                                "cloudformation:CreateChangeSet",
                                                                "cloudformation:DeleteChangeSet",
                                                                "cloudformation:DescribeChangeSet",
                                                                "cloudformation:ExecuteChangeSet",
                                                                "cloudformation:SetStackPolicy",
                                                                "cloudformation:ValidateTemplate",
                                                                "iam:PassRole"
                                                        ],
                                                        "Resource": "*",
                                                        "Effect": "Allow"
                                                },
                                                {
                                                        "Action": [
                                                                "codebuild:BatchGetBuilds",
                                                                "codebuild:StartBuild"
                                                        ],
                                                        "Resource": "*",
                                                        "Effect": "Allow"
                                                }
                                        ],
                                        "Version": "2012-10-17"
                                }

                        }

                },

                "Pipeline": {
                        "Type" : "AWS::CodePipeline::Pipeline",
                        "Properties" : {
                                "Name" : {
                                  "Ref": "PipelineName"
                                },
                                "ArtifactStore" : {
                                        "Type": "S3",
                                        "Location" : {
                                                "Ref" : "ArtifactStoreS3Bucket"
                                        }
                                },
                                "RestartExecutionOnUpdate" : "True",
                                "RoleArn" : {
                                        "Fn::GetAtt": [
                                                "PipelineRole",
                                                "Arn"
                                        ]
                                },
                                "Stages" : [
                                        {
                                                "Name": "Source",
                                                "Actions": [
                                                        {
                                                                "Name": "ApplicationSource",
                                                                "ActionTypeId": {
                                                                        "Category": "Source",
                                                                        "Owner": "ThirdParty",
                                                                        "Version": "1",
                                                                        "Provider": "GitHub"
                                                                },
                                                                "OutputArtifacts": [
                                                                        {
                                                                              "Name": "MyApp"
                                                                        }
                                                                ],
                                                                "Configuration": {
                                                                        "Owner": {
                                                                          "Ref": "ApplicationRepositoryOwner"
                                                                        },
                                                                        "Repo": {
                                                                          "Ref": "ApplicationRepositoryName"
                                                                        },
                                                                        "Branch": "master",
                                                                        "OAuthToken" : {
                                                                          "Ref": "ApplicationRepositoryOAuthToken"
                                                                        }
                                                                },
                                                                "RunOrder": 1
                                                        },
                                                        {
                                                                "Name": "InfrastructureSource",
                                                                "ActionTypeId": {
                                                                        "Category": "Source",
                                                                        "Owner": "ThirdParty",
                                                                        "Version": "1",
                                                                        "Provider": "GitHub"
                                                                },
                                                                "OutputArtifacts": [
                                                                        {
                                                                              "Name": "MyInfra"
                                                                        }
                                                                ],
                                                                "Configuration": {
                                                                        "Owner": "antoniou",
                                                                        "Repo": "zero2Pipeline",
                                                                        "Branch": "master",
                                                                        "OAuthToken" : {
                                                                          "Ref": "ApplicationRepositoryOAuthToken"
                                                                        }
                                                                },
                                                                "RunOrder": 1
                                                        }
                                                ]
                                        },
                                        {
                                                "Name" : "Build",
                                                "Actions": [
                                                  {
                                                          "Name": "GenerateBuildspec",
                                                          "ActionTypeId": {
                                                                  "Category": "Invoke",
                                                                  "Owner" : "AWS",
                                                                  "Provider" : "Lambda",
                                                                  "Version" : "1"
                                                          },
                                                          "Configuration": {
                                                                  "FunctionName": {
                                                                          "Ref": "GenerateBuildspecFunction"
                                                                  }
                                                          },
                                                          "InputArtifacts": [
                                                                  {
                                                                          "Name": "MyApp"
                                                                  }
                                                          ],
                                                          "OutputArtifacts": [
                                                                  {
                                                                          "Name": "MyAppWithBuildspec"
                                                                  }
                                                          ],
                                                          "RunOrder": 1
                                                  },
                                                  {
                                                          "Name": "BuildCode",
                                                          "ActionTypeId" : {
                                                                  "Category" : "Build",
                                                                  "Owner" : "AWS",
                                                                  "Provider" : "CodeBuild",
                                                                  "Version" : "1"
                                                          },
                                                          "Configuration": {
                                                                  "ProjectName": {
                                                                    "Ref": "PipelineName"
                                                                  }
                                                          },
                                                          "InputArtifacts": [
                                                                  {
                                                                        "Name" : "MyAppWithBuildspec"
                                                                  }
                                                          ],
                                                          "OutputArtifacts": [
                                                                  {
                                                                          "Name": "MyAppBuild"
                                                                  }
                                                          ],
                                                          "RunOrder": 2
                                                  },
                                                  {
                                                          "Name": "GenerateBuildParameters",
                                                          "ActionTypeId": {
                                                                  "Category": "Invoke",
                                                                  "Owner" : "AWS",
                                                                  "Provider" : "Lambda",
                                                                  "Version" : "1"
                                                          },
                                                          "Configuration": {
                                                                  "FunctionName": {
                                                                          "Ref": "GenerateBuildParamsFunction"
                                                                  }
                                                          },
                                                          "InputArtifacts": [
                                                                  {
                                                                          "Name": "MyAppBuild"
                                                                  },
                                                                  {
                                                                          "Name": "MyInfra"
                                                                  }
                                                          ],
                                                          "OutputArtifacts": [
                                                                  {
                                                                          "Name": "GenBuildParams"
                                                                  }
                                                          ],
                                                          "RunOrder": 3
                                                  }
                                                ]
                                        },
                                        {
                                                "Name" : "Integration",
                                                "Actions": [
                                                  {
                                                          "Name": "GenerateDeployParameters",
                                                          "ActionTypeId": {
                                                                  "Category": "Invoke",
                                                                  "Owner" : "AWS",
                                                                  "Provider" : "Lambda",
                                                                  "Version" : "1"
                                                          },
                                                          "Configuration": {
                                                                  "FunctionName": {
                                                                          "Ref": "GenerateDeployParamsFunction"
                                                                  }
                                                          },
                                                          "InputArtifacts": [
                                                                  {
                                                                          "Name": "MyInfra"
                                                                  },
                                                                  {
                                                                          "Name": "GenBuildParams"
                                                                  }
                                                          ],
                                                          "OutputArtifacts": [
                                                                  {
                                                                          "Name": "ParamGen"
                                                                  }
                                                          ],
                                                          "RunOrder": 1
                                                  },
                                                  {
                                                          "Name": "DeployCode",
                                                          "ActionTypeId" : {
                                                                  "Category" : "Deploy",
                                                                  "Owner" : "AWS",
                                                                  "Provider" : "CloudFormation",
                                                                  "Version" : "1"
                                                          },
                                                          "Configuration": {
                                                                  "StackName": "int-SimplePipeline-beanstalk",
                                                                  "ActionMode": "CREATE_UPDATE",
                                                                  "RoleArn": {
                                                                          "Fn::GetAtt": [
                                                                                  "DeployRole",
                                                                                  "Arn"
                                                                          ]
                                                                  },
                                                                  "Capabilities": "CAPABILITY_NAMED_IAM",
                                                                  "TemplatePath": "MyInfra::templates/beanstalk.json",
                                                                  "TemplateConfiguration": "ParamGen::templates/parameters-int.json"
                                                          },
                                                          "InputArtifacts": [
                                                                  {
                                                                        "Name": "MyInfra"
                                                                  },
                                                                  {
                                                                        "Name": "ParamGen"
                                                                  }
                                                          ],
                                                          "RunOrder": 2
                                                  }
                                                ]
                                        }

                                ]
                        }
                },

                "BuildStage": {
                        "Type" : "AWS::CodeBuild::Project",
                        "Properties" : {
                                "Name" : {
                                  "Ref": "PipelineName"
                                },
                                "Artifacts" : {
                                        "Packaging" : "NONE",
                                        "Name" : "build-artifact",
                                        "Type" : "CODEPIPELINE"
                                },
                                "Environment" : {
                                        "ComputeType": "BUILD_GENERAL1_SMALL",
                                        "Image": "aws/codebuild/docker:1.11.2",
                                        "Type": "LINUX_CONTAINER",
                                        "EnvironmentVariables": []
                                },
                                "ServiceRole" : {
                                        "Fn::GetAtt": [
                                                "BuildRole",
                                                "Arn"
                                        ]
                                },
                                "Source" : {
                                        "Type": "CODEPIPELINE"
                                }
                        }
                },

                "BuildRole" : {
                        "Type": "AWS::IAM::Role",
                        "Properties": {
                                "AssumeRolePolicyDocument": {
                                        "Version" : "2012-10-17",
                                        "Statement": [ {
                                                "Effect": "Allow",
                                                "Principal": {
                                                        "Service": [ "codebuild.amazonaws.com" ]
                                                },
                                                "Action": [ "sts:AssumeRole" ]
                                        } ]
                                }
                        }

                },

                "BuildRolePolicy": {
                        "Type": "AWS::IAM::Policy",
                        "Properties": {
                                "PolicyName" : "BuildPolicy",
                                "Roles" : [
                                        {
                                                "Ref" : "BuildRole"
                                        }
                                ],
                                "PolicyDocument" : {
                                        "Version": "2012-10-17",
                                        "Statement": [
                                                {
                                                        "Sid": "AllowCRUDLogsToCloudWatch",
                                                        "Effect": "Allow",
                                                        "Resource": [
                                                                "*"
                                                        ],
                                                        "Action": [
                                                                "logs:CreateLogGroup",
                                                                "logs:CreateLogStream",
                                                                "logs:PutLogEvents"
                                                        ]
                                                },
                                                {
                                                        "Sid": "AllowCRUDArtifactsOnS3",
                                                        "Effect": "Allow",
                                                        "Resource": [
                                                          {
                                                            "Fn::Join": [
                                                                  "",
                                                                  [
                                                                      "arn:aws:s3:::",
                                                                      {
                                                                        "Fn::Join": [
                                                                                "-",
                                                                                [
                                                                                        {
                                                                                                "Ref": "PipelineName"
                                                                                        },
                                                                                        {
                                                                                                "Ref": "AWS::Region"
                                                                                        },
                                                                                        "*/*"
                                                                                ]
                                                                        ]
                                                                      }
                                                                  ]
                                                            ]
                                                          }
                                                        ],
                                                        "Action": [
                                                                "s3:GetObject",
                                                                "s3:GetObjectVersion",
                                                                "s3:PutObject"
                                                        ]
                                                },
                                                {
                                                        "Sid": "AllowPushingToECR",
                                                        "Effect": "Allow",
                                                        "Resource": [
                                                          "*"
                                                        ],
                                                        "Action": [
                                                          "ecr:*"
                                                        ]
                                                }
                                        ]
                                }
                        }
                },

                "DeployRole" : {
                        "Type": "AWS::IAM::Role",
                        "Properties": {
                                "AssumeRolePolicyDocument": {
                                        "Version" : "2012-10-17",
                                        "Statement": [ {
                                                "Effect": "Allow",
                                                "Principal": {
                                                        "Service": [ "cloudformation.amazonaws.com" ]
                                                },
                                                "Action": [ "sts:AssumeRole" ]
                                        } ]
                                }
                        }

                },

                "DeployRolePolicy": {
                        "Type": "AWS::IAM::Policy",
                        "Properties": {
                                "PolicyName" : "DeployPolicy",
                                "Roles" : [
                                        {
                                                "Ref" : "DeployRole"
                                        }
                                ],
                                "PolicyDocument" : {
                                        "Version": "2012-10-17",
                                        "Statement": [
                                                {
                                                        "Sid": "AllowAll",
                                                        "Effect": "Allow",
                                                        "Resource": [
                                                          "*"
                                                        ],
                                                        "Action": [
                                                          "*"
                                                        ]
                                                }
                                        ]
                                }
                        }
                },

                "LambdaExecutionRole" : {
                        "Type": "AWS::IAM::Role",
                        "Properties": {
                                "AssumeRolePolicyDocument": {
                                        "Version" : "2012-10-17",
                                        "Statement": [ {
                                                "Effect": "Allow",
                                                "Principal": {
                                                        "Service": [ "lambda.amazonaws.com" ]
                                                },
                                                "Action": [ "sts:AssumeRole" ]
                                        } ]
                                }
                        }

                },

                "LambdaExecutionRolePolicy": {
                        "Type": "AWS::IAM::Policy",
                        "Properties": {
                                "PolicyName" : "LambdaPolicy",
                                "Roles" : [
                                        {
                                                "Ref" : "LambdaExecutionRole"
                                        }
                                ],
                                "PolicyDocument" : {
                                        "Version": "2012-10-17",
                                        "Statement": [
                                          {
                                                  "Action": [
                                                    "logs:*"
                                                  ],
                                                  "Effect": "Allow",
                                                  "Resource": "arn:aws:logs:*:*:*"
                                          },
                                          {
                                                  "Action": [
                                                            "codepipeline:PutJobSuccessResult",
                                                            "codepipeline:PutJobFailureResult"
                                                    ],
                                                    "Effect": "Allow",
                                                    "Resource": "*"
                                           }
                                        ]
                              }
                        }
                },

                "GenerateBuildspecFunction": {
                        "Type" : "AWS::Lambda::Function",
                        "Properties" : {
                              "Code" : {
                                    "S3Bucket": "lambda-store-eu-west-1-329485089133",
                                    "S3Key": {
                                      "Fn::Join": [
                                              "/",
                                              [
                                                      {
                                                              "Ref": "PipelineName"
                                                      },
                                                      "genBuildspec.zip"
                                              ]
                                      ]
                                    }
                              },
                              "Description" : "Lambda Function that generates build-spec",
                              "FunctionName" : {
                                "Fn::Join": [
                                  "-",
                                  [
                                    {
                                      "Ref": "PipelineName"
                                    },
                                    "genBuildspec"
                                  ]
                                ]
                              },
                              "Handler" : "genBuildspec.lambda_handler",
                              "Role": {
                                    "Fn::GetAtt" : [
                                            "LambdaExecutionRole",
                                            "Arn"
                                    ]
                              },
                              "Runtime" : "python2.7"
                        }
                },

                "GenerateBuildParamsFunction": {
                        "Type" : "AWS::Lambda::Function",
                        "Properties" : {
                              "Code" : {
                                    "S3Bucket": "lambda-store-eu-west-1-329485089133",
                                    "S3Key": {
                                      "Fn::Join": [
                                              "/",
                                              [
                                                      {
                                                              "Ref": "PipelineName"
                                                      },
                                                      "genBuildParams.zip"
                                              ]
                                      ]
                                    }
                              },
                              "Description" : "Lambda Function that generates build-time parameters",
                              "FunctionName" : {
                                "Fn::Join": [
                                  "-",
                                  [
                                    {
                                      "Ref": "PipelineName"
                                    },
                                    "genBuildParams"
                                  ]
                                ]
                              },
                              "Handler" : "genBuildParams.lambda_handler",
                              "Role": {
                                    "Fn::GetAtt" : [
                                            "LambdaExecutionRole",
                                            "Arn"
                                    ]
                              },
                              "Runtime" : "python2.7"
                        }
                },

                "GenerateDeployParamsFunction": {
                        "Type" : "AWS::Lambda::Function",
                        "Properties" : {
                              "Code" : {
                                    "S3Bucket": "lambda-store-eu-west-1-329485089133",
                                    "S3Key": {
                                      "Fn::Join": [
                                              "/",
                                              [
                                                      {
                                                              "Ref": "PipelineName"
                                                      },
                                                      "generateParams.zip"
                                              ]
                                      ]
                                    }
                              },
                              "Description" : "Lambda Function that generates deploy-time parameters",
                              "FunctionName" : {
                                "Fn::Join": [
                                  "-",
                                  [
                                    {
                                      "Ref": "PipelineName"
                                    },
                                    "generateDeployParams"
                                  ]
                                ]
                              },
                              "Handler" : "generateParams.lambda_handler",
                              "Role": {
                                    "Fn::GetAtt" : [
                                            "LambdaExecutionRole",
                                            "Arn"
                                    ]
                              },
                              "Runtime" : "python2.7"
                        }
                },

                "DockerRepository": {
                  "Type": "AWS::ECR::Repository",
                  "Properties": {
                    "RepositoryName": {
                      "Ref": "PipelineName"
                    },
                    "RepositoryPolicyText": {
                      "Version": "2012-10-17",
                      "Statement": [
                        {
                          "Sid": "AllowPush",
                          "Effect": "Allow",
                          "Principal": {
                            "AWS": [
                              {
                                "Fn::GetAtt": [
                                  "BuildRole",
                                  "Arn"
                                ]
                              }
                            ]
                          },
                          "Action": [
                            "ecr:*"
                          ]
                        }
                      ]
                    }
                  }
                }
        }
}
